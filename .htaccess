# ==================== FICHIERS UPLOAD ====================
<Files ~ "\.php$">
    Deny from all
</Files>

# ==================== ROBOTS.TXT ====================
<FilesMatch "robots\.txt">
    Allow from all
</FilesMatch>

# ==================== SITEMAP ====================
<FilesMatch "sitemap\.xml">
    Allow from all
</FilesMatch>

# ==================== MANIFESTE ====================
<FilesMatch "manifest\.json">
    Header set Content-Type "application/manifest+json"
    Allow from all
</FilesMatch>
